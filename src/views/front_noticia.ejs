    <div id="container" class="container mt-3 d-none">
        <div class="row">
            <main class="col-12 col-sm-12 col-md-9">
                <div class="row">
                    <div class="col-auto">
                        <span class="btn btn-sm btn-warning text-uppercase" name="categoria"></span>
                    </div>
                    <div class="col text-right">
                        <a name="share_facebook" href="https://www.facebook.com/sharer.php?u=https://roqueperezhoy.com.ar/" target="_blank" class="btn btn-sm text-white" style="background-color: var(--facebook);"><i class="fab fa-facebook"></i></a>
