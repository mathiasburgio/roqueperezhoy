                                <div class="swiper-pagination"></div>
                            
                                <!-- If we need navigation buttons -->
                                <div class="swiper-button-prev"></div>
                                <div class="swiper-button-next"></div>
                            </div>
                            <iframe id="myVideo" class="aspect-ratio-169 d-none" style="width: 100%; border:none;"></iframe>
                        </div>
                        <small name="pie_de_foto" class="text-muted"></small>
                        <div name="detalle" class="nota-detalle primera-letra"></div>
                        <p>
                            <b>Autor: </b><span name="autor"></span>
                        </p>
                        <p>
                            <b>Fuente: </b><span name="fuente"></span>
                        </p>
                        <b>Temas relacionados</b>
