<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/head"); %>
</head>
<body>
    <%- include("templates/header"); %>
    <%- include("templates/menu"); %>
    <div id="container" class="container d-none">
        <div class="row">
            <main class="col-12">
                <div id="horarios-de-transportes" class="my-3">
                    <div class="titulo">Horarios de transportes</div>
                    <div name="cardListado">
                        <div class="card">
                            <div class="card-header">
                                <div class="btn-group">
                                    <button class="btn btn-outline-secondary btn-sm" tab-ref="listado" style="width: 100px;">Listado</button>
                                    <button class="btn btn-outline-secondary btn-sm" tab-ref="datos" style="width: 100px;">Datos</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6" tab="listado">
                                        <div class="row mb-3">
                                            <div class="col">
                                                <button class="btn btn-light btn-block btn-sm" crud="btNew">Nuevo</button>
                                            </div>
                                            <div class="col">
                                                <button class="btn btn-light btn-block btn-sm" crud="btModify">Modificar</button>
                                            </div>
                                            <div class="col">
                                                <button class="btn btn-light btn-block btn-sm" crud="btDelete">Eliminar</button>
                                            </div>
                                        </div>
                                        <div id="container-main-table" class="border"></div>
                                    </div>
                                    <div class="col-sm-6 d-none d-sm-block" tab="datos" crud="fields">
                                        <div class="form-group">
                                            <label for="">POI transporte</label>
                                            <div class="input-group">
                                                <input type="text" readonly="true" name="_poi_transporte" class="form-control">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" name="btSeleccionarPoi" field="_poi_transporte"><i class="fas fa-hand-pointer"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="">Origen</label>
                                            <input type="text" name="origen" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="">POI origen</label>
                                            <div class="input-group">
                                                <input type="text" readonly="true" name="_poi_origen" class="form-control">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" name="btSeleccionarPoi" field="_poi_origen"><i class="fas fa-hand-pointer"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="">Destino</label>
                                            <input type="text" name="destino" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="">POI destino</label>
                                            <div class="input-group">
                                                <input type="text" readonly="true" name="_poi_destino" class="form-control">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" name="btSeleccionarPoi" field="_poi_destino"><i class="fas fa-hand-pointer"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="">Días / Horarios</label>
                                            <div class="table-responsive border" name="dias_horarios">
                                                <table class="table table-sm">
                                                    <thead class="thead-dark">
                                                        <tr>
                                                            <th>Día</th>
                                                            <th>Salida</th>
                                                            <th>Llegada</th>
                                                            <th>Precio</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <td colspan="100%">
                                                                <button class="btn btn-block btn-primary btn-sm" name="btAgregarFecha">Agregar fecha</button>
                                                            </td>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                            <small class='text-muted'>Si tiene imagen estos horarios no se muestran.</small>
                                        </div>
                                        <div class="form-group">
                                            <label for="">Imagenes</label>
                                            <div class="row">
                                                <div class="imagen col my-2" name="img1" style="margin: auto;"></div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="">Activo</label>
                                            <select name="activo" class="form-control">
                                                <option value="0">No</option>
                                                <option value="1">Si</option>
                                            </select>
                                        </div>
                                        <button class="btn btn-block btn-sm btn-primary mt-2" name="btGuardar" crud="btSave">Guardar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--#horarios-de-transportes-->
            </main>
        </div>
    </div>

    <div class="d-none"></div>

    <%- include("templates/scripts") %>
    <script src="/scripts/AdminHorariosDeTransportes.js"></script>
    <script src="/resources/SimpleCRUD.js"></script>
    <script>
        var horariosDetransportes = new AdminHorariosDeTransportes();
        window.onload = () =>{
            horariosDetransportes.ini();
        }
    </script>
    <%- include("templates/footer") %>
</body>
</html>