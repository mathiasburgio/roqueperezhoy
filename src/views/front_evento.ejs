<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/head"); %>
</head>
<body>
    <%- include("templates/header"); %>
    <%- include("templates/menu"); %>
    <div id="container" class="container mt-3 d-none">
        <div class="row">
            <main class="col-12 col-sm-12 col-md-9">
                <div class="text-right">
                    <a name="share_facebook" href="https://www.facebook.com/sharer.php?u=https://roqueperezhoy.com.ar/noticias" target="_blank" class="btn btn-sm text-white" style="background-color: var(--facebook);"><i class="fab fa-facebook"></i></a>
                    <a name="share_whatsapp" href="https://wa.me/?text=https://roqueperezhoy.com.ar/noticias" target="_blank" class="btn btn-sm text-white" style="background-color: var(--whatsapp);"><i class="fab fa-whatsapp"></i></a>
                    <a name="share_twitter" href="https://twitter.com/intent/tweet?text=noticias%20RoquePerezHoy&url=https://roqueperezhoy.com.ar/noticias" target="_blank" class="btn btn-sm text-white" style="background-color: var(--twitter);"><i class="fab fa-twitter"></i></a>
                </div>
                <div id="evento" class="mt-3">
                    <div id="nota">
                        <div name="suspendido" class="alert alert-danger d-none">
                            <h4>
                                <i class="fa-solid fa-triangle-exclamation"></i> Este evento se encuentra SUSPENDIDO
                            </h4>
                        </div>
                        <h3 name="nombre"></h3>
                        <div class="aspect-ratio-169 mt-2">
                            <div id="swiper-principal" class="swiper aspect-ratio-169 d-none">
                                <!-- Additional required wrapper -->
                                <div class="swiper-wrapper"></div>
                                <!-- If we need pagination -->
                                <div class="swiper-pagination"></div>
                            
                                <!-- If we need navigation buttons -->
                                <div class="swiper-button-prev"></div>
                                <div class="swiper-button-next"></div>
                            </div>
                            <iframe id="myVideo" class="aspect-ratio-169 d-none" style="width: 100%; border:none;"></iframe>
                        </div>
                        <h4 class="mt-2 text-success" name="precio"></h4>
                        <div name="detalle" class="nota-detalle primera-letra"></div>

                        <div name="fechas" class="border w-50 mt-3 m-auto">
                            <table class="table table-sm mb-0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="titulo mt-3">OTROS EVENTOS</div>
                    <div class="row no-gutters mb-3" name="otros-eventos">
        
                    </div>
                </div>
            </main>
            <aside class="col-12 col-sm-12 col-md-3" name="publicidades_laterales">
                <div class="titulo">Publicidad</div>
            </aside>
            <aside class="col-12 col-sm-12 col-md-3" name="publicidades_inferiores"></aside>
        </div>
    </div>
    <div class="d-none">
        <div id="template_evento">
            <div class="item col-12 col-sm-12 col-md-6 no-gutters cp" style="position: relative; overflow: hidden;">
                <a class="no-a">
                    <div name="fecha" class="text-uppercase text-white text-center fecha-evento">16<br>JUL</div>
                    <img name="imagen" class="img-169">
                    <div name="suspendido" class="d-none text-white evento-suspendido">
                        SUSPENDIDO
                    </div>
                </a>
            </div>
        </div>
    </div>

    <%- include("templates/scripts") %>
    <script src="/scripts/FrontEvento.js"></script>
    <script>
        var evento = new FrontEvento();
        window.onload = () =>{
            evento.ini();
        }
    </script>
    <%- include("templates/footer") %>
</body>
</html>