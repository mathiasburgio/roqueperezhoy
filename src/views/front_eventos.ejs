<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/head"); %>
</head>
<body>
    <%- include("templates/header"); %>
    <%- include("templates/menu"); %>
    <div id="container" class="container mt-3 d-none">
        <div class="row">
            <main class="col-12 col-sm-12 col-md-9">
                <div class="titulo">Eventos <small name="buscado" class="text-muted d-none" style="font-size: 0.5em"> - Buscado: ?</small></div>
                <div class="text-right">
                    <a name="share_facebook" href="https://www.facebook.com/sharer.php?u=https://roqueperezhoy.com.ar/eventos" target="_blank" class="btn btn-sm text-white" style="background-color: var(--facebook);"><i class="fab fa-facebook"></i></a>
                    <a name="share_whatsapp" href="https://wa.me/?text=https://roqueperezhoy.com.ar/eventos" target="_blank" class="btn btn-sm text-white" style="background-color: var(--whatsapp);"><i class="fab fa-whatsapp"></i></a>
                    <a name="share_twitter" href="https://twitter.com/intent/tweet?text=eventos%20RoquePerezHoy&url=https://roqueperezhoy.com.ar/eventos" target="_blank" class="btn btn-sm text-white" style="background-color: var(--twitter);"><i class="fab fa-twitter"></i></a>
                </div>
                <div id="eventos" class="mt-3">
                    <div name="listado" class="row no-gutters"></div>
                </div>
            </main>
            <aside class="col-12 col-sm-12 col-md-3" name="publicidades_laterales">
                <div class="titulo">Publicidad</div>
            </aside>
            <aside class="col-12" name="publicidades_inferiores"></aside>
        </div>
    </div>
    <div class="d-none">
        <div id="template_evento">
            <div class="item col-12 col-sm-12 col-md-6 no-gutters cp" style="position: relative; overflow: hidden;">
                <a class="no-a">
                    <div name="fecha" class="text-uppercase text-white text-center fecha-evento">16<br>JUL</div>
                    <img name="imagen" class="img-169">
                    <div name="suspendido" class="d-none text-white evento-suspendido">
                        SUSPENDIDO
                    </div>
                </a>
            </div>
        </div>
    </div>

    <%- include("templates/scripts") %>
    <script src="/scripts/FrontEventos.js"></script>
    <script>
        var eventos = new FrontEventos();
        window.onload = () =>{
            eventos.ini();
        }
    </script>
    <%- include("templates/footer") %>
</body>
</html>