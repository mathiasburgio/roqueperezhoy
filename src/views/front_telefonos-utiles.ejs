                        <img name="imagen" src="#" class="card-img-top img-169" alt="noticia">
                        <div class="card-body">
                            <div name="etiqueta" class="h1 d-none" style="position:absolute; top:5px; right:5px"><i class="fas fa-circle-play text-light"></i></div>
                            <h5 class="card-title d-none" name="titulo">titulo</h5>
                            <p class="card-text" name="titulo2">titulo 2</p>
                            <span class="badge badge-info"><i class="fas fa-calendar"></i> <span name="fecha">fecha</span></span>
                            <div class="text-right text-primary cp">Ver noticia</div>
                        </div>
                    </a>
                </div>
            </div>
