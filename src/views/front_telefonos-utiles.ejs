            </aside>
            <aside class="col-12 col-sm-12 col-md-3" name="publicidades_inferiores"></aside>
        </div>
    </div>
    <div class="d-none">
        <div id="template_telefono_util">
            <a target="_blank" class="list-group-item list-group-item-action p-0">
                <div class="d-flex bd-highlight">
                    <div class="d-flex align-items-center text-white" style="width: 75px;">
                        <i class="fas fa-phone m-auto h2"></i>
                    </div>
                    <div class="flex-grow-1 pl-3 py-2 w-75" style="overflow: hidden;">
                        <h5 class="mb-1 one-line"><span name="departamento"></span><span name="subdepartamento" class=" ml-2 badge badge-info"></span></h5>
                        <p class="mb-1 one-line" name="dato">Some placeholder content in a paragraph.</p>
                    </div>
                </div>
            </a>
        </div>
        <div id="template_noticia">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 ">
