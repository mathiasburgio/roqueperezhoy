<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/head"); %>
</head>
<body>
    <%- include("templates/header"); %>
    <%- include("templates/menu"); %>
    <div id="container" class="container mt-3 d-none">
        <div class="row">
            <main class="col-12 col-sm-12 col-md-9">
                <div class="titulo">Horarios de transportes</div>
                <div class="text-right">
                    <a name="share_facebook" href="https://www.facebook.com/sharer.php?u=https://roqueperezhoy.com.ar/horarios-de-transportes" target="_blank" class="btn btn-sm text-white" style="background-color: var(--facebook);"><i class="fab fa-facebook"></i></a>
                    <a name="share_whatsapp" href="https://wa.me/?text=https://roqueperezhoy.com.ar/horarios-de-transportes" target="_blank" class="btn btn-sm text-white" style="background-color: var(--whatsapp);"><i class="fab fa-whatsapp"></i></a>
                    <a name="share_twitter" href="https://twitter.com/intent/tweet?text=horarios-de-transportes%20RoquePerezHoy&url=https://roqueperezhoy.com.ar/horarios-de-transportes" target="_blank" class="btn btn-sm text-white" style="background-color: var(--twitter);"><i class="fab fa-twitter"></i></a>
                </div>
                <small class="text-muted">*Click para ver horarios y precios</small>
                <div id="horarios-de-transportes" class="mt-3">
                    <div class="table-responsive border">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Origen</th>
                                    <th>Destino</th>
                                    <th>Transporte</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="titulo mt-3">Últimas noticias</div>
                <div class="row" name="otras-noticias">

                </div>
            </main>
            <aside class="col-12 col-sm-12 col-md-3" name="publicidades_laterales">
                <div class="titulo">Publicidad</div>
            </aside>
            <aside class="col-12" name="publicidades_inferiores"></aside>
        </div>
    </div>
    <div class="d-none">
        <div id="template_item">
            <table><!--tengo q armar toda la estructura de tabla para q me lo reconozca el navegador-->
                <tbody>
                    <tr class="cp">
                        <td name="origen"></td>
                        <td name="destino"></td>
                        <td name="transporte"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="template_modal">
            <div class="form-group">
                <label for="">Origen</label>
                <div class="input-group input-group-sm">
                    <input type="text" name="origen" class="form-control form-control-sm" readonly>
                    <div class="input-group-append">
                        <a name="enlace_origen" class="btn btn-primary disabled"><i class="fas fa-search"></i></a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="">Destino</label>
                <div class="input-group input-group-sm">
                    <input type="text" name="destino" class="form-control form-control-sm" readonly>
                    <div class="input-group-append">
                        <a name="enlace_destino" class="btn btn-primary disabled"><i class="fas fa-search"></i></a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="">Transporte</label>
                <div class="input-group input-group-sm">
                    <input type="text" name="transporte" class="form-control form-control-sm" readonly>
                    <div class="input-group-append">
                        <a name="enlace_transporte" class="btn btn-primary disabled"><i class="fas fa-search"></i></a>
                    </div>
                </div>
            </div>

            <b>Horarios</b>
            <div class="table-responsive border mb-3">
                <table class="table table-sm table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Día/s</th>
                            <th class="text-right">Salida</th>
                            <th class="text-right">Llegada</th>
                            <th class="text-right">Precio</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

            <b>Contactar</b>
            <div name="botones-contactar" class="mb-3">
                Sin datos de contacto...
            </div>

            <div class="text-right">
                <button name="share-copiar" class="btn btn-sm text-white d-none" style="background-color: var(--secondary);"><i class="fas fa-copy"></i></button>
                <a target="_blank" name="share-facebook" class="btn btn-sm text-white" style="background-color: var(--facebook);"><i class="fab fa-facebook"></i></a>
                <a target="_blank" name="share-whatsapp" class="btn btn-sm text-white" style="background-color: var(--whatsapp);"><i class="fab fa-whatsapp"></i></a>
                <a target="_blank" name="share-twitter" class="btn btn-sm text-white" style="background-color: var(--twitter);"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
        <div id="template_noticia">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 ">
                <div class="card cp shadow-sm mb-4" style="position: relative;">
                    <a href="" class="no-a">
                        <img name="imagen" src="#" class="card-img-top img-169" alt="noticia">
                        <div class="card-body">
                            <div name="etiqueta" class="h1 d-none" style="position:absolute; top:5px; right:5px"><i class="fas fa-circle-play text-light"></i></div>
                            <h5 class="card-title d-none" name="titulo">titulo</h5>
                            <p class="card-text" name="titulo2">titulo 2</p>
                            <span class="badge badge-info"><i class="fas fa-calendar"></i> <span name="fecha">fecha</span></span>
                            <div class="text-right text-primary cp">Ver noticia</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <%- include("templates/scripts") %>
    <script src="/scripts/FrontHorariosDeTransportes.js"></script>
    <script>
        var horariosDeTransportes = new FrontHorariosDeTransportes();
        window.onload = () =>{
            horariosDeTransportes.ini();
        }
    </script>
    <%- include("templates/footer") %>
</body>
</html>